Import("env", "lib_flags")

env.Append(
    CPPPATH=[
        "#/lib/microtar/src",
    ],
)


libenv = env.Clone()
libenv.MergeFlags(lib_flags)

libenv.Append(
    CPPDEFINES=["MICROTAR_DISABLE_API_CHECKS"],
)

sources = libenv.GlobRecursive("*.c", "microtar/src")

lib = libenv.StaticLibrary("microtar", sources)
libenv.Install("${LIB_DIST_DIR}", lib)
Return("lib")
